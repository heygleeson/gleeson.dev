---
layout: base.njk
---
<div id="crumbs">
{# <a href="/">HOME</a> / <a href="/blog">BLOG</a> / <a href="{{ page.url }}">{{ title }}</a> / #}
/ <a href="/blog">BLOG</a> /
</div>

<h1>{{ title }}</h1>
<div class="intro">{{ description }}</div>
<hr>
<div class="postmeta">
	<div class="row">
		<div class="authorImageSmall">
			<img src="{{ authors[author].image }}" alt="{{ authors[author].fullname }} profile image">
		</div>
		<author>{{ author }} {# // <span class="yellow">{{ authors[author].fullname }}</span> #}</author>
	</div>
	
	<div class="column">
		<date>Published {{ date | readableDate }}</date>
		{% if updated %}
		<date>Updated {{ updated | readableDate }}</date>
		{% endif %}
	</div>
</div>

<hr>
{% if heroImage %}
	<div class="heroFrame">
	<img src="/img/{{ heroImage }}"> </img>
	</div>
	<hr>
{% endif %}
<article>
	{{ content | safe }}
</article>
<hr>
<div class="taglist">
	<strong>Tags</strong>
	{% for tag in tags | filterIgnoredTags %}
		{% set tagUrl %}../../tags/{{ tag | slugify }}/{% endset %}
		<span class="tag"><a href="{{ tagUrl | url }}">{{ tag }}</a></span>
	{% endfor %}
</div>